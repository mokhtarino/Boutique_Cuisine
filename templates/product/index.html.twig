{% extends 'base.html.twig' %}
{% block body %}
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6">
                <img src="../uploads/illustrations/{{ product.illustration }}" class="img-fluid"
                     alt="{{ product.name }}"/>
            </div>
            <div class="col-md-6">
                <h1>{{ product.name }}</h1>
                <small>
                    <a href="{{ path('app_category', {'slug':product.category.slug }) }}">{{ product.category.name }}</a>
                    >
                    {{ product.name }}
                </small>
                <span class="d-block">{{ product.priceWt|price}}</span>
                <p>{{ product.description|raw }}</p>
                <a href="{{ path('app_cart_add', {'id': product.id}) }}" class="btn btn-dark w-100 mt-3">Ajouter au panier</a>
            </div>
        </div>
    </div>

{% endblock %}


