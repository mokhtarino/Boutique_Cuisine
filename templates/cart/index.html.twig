{% extends 'base.html.twig' %}
{% block body %}
    <div class="container my-5">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-9">
                <div class="container">
                    <h1>Mon panier</h1>
                    <div class="row">
                        <div class="col-md-8">
                            {% for product in cart %}
                                <div class="row mt-2">
                                    <div class="col-md-3">
                                        <img class="img-fluid"
                                             src="../uploads/illustrations/{{ product.object.illustration }}"
                                             alt="{{ product.object.name }}"/>
                                    </div>
                                    <div class="col-md-4">
                                        <strong>
                                            {{ product.object.name }}</strong>
                                        <span class="d-block">{{ product.object.priceWt|price }}</span>
                                    </div>
                                    <div class="col-md-3">
                                        <a href="{{ path('app_cart_update_qty', {'id': product.object.id, 'qty': '-1'}) }}"><span
                                                    class="badge text-bg-warning">  - </span></a>
                                        <span class="badge text-bg-secondary"> x {{ product.quantity }}</span>
                                        <a href="{{ path('app_cart_update_qty', {'id': product.object.id, 'qty': '1'}) }}"><span
                                                    class="badge text-bg-warning">+</span></a>
                                    </div>
                                    <div class="col-md-2">
                                        <strong>{{ (product.quantity * product.object.priceWt)|price }}</strong></div>
                                </div>
                            {% endfor %}
                            <a href="{{ path('app_cart_remove') }}"><small>Vider mon panier</small></a>
                        </div>
                        <div class="col-md-4">
                            <div class="bg-light p-2">
                                <div class="d-flex justify-content-between">
                                    <span class="fw-bold">Total produit</span>
                                    <span class="col-2">{{ fullCartQuantity }}</span>
                                </div>
                                <div class="d-flex justify-content-between mt-3">
                                    <span class="fw-bold">Total TTC</span>
                                    <span class="col-2">{{ totalWt|price }}</span>
                                </div>
                                <div>
                                    <button class="btn btn-success w-100 mt-3">Commander</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}


